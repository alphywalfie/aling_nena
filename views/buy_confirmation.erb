  <body>

    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <a class="navbar-brand" href="/">Aling Nena</a>
		  <a class ="navbar-text" href = "/about">About </a>
		  <a class ="navbar-text" href = "/products">Products </a>
        </div>
      </div>
    </div>

    <div class="container">
	<div class = "admin">
      <h1> Purchase Made!</h2>

		<p> Item Purchased: <%= @product.name %></p>
		<p> Price of Item: <%= @product.price %></p>
		<p> Amount Purchased: <%= @quantity %></p>
		<p> Total Cost: <%= @cost %> </p>
		<p> Amount Paid: <%= @money_calc.total_payment %></p>
		<p> Change: <%= @change_amount %></p>
		<br/>
		<p> Change, breakdown by denomination: </p>
		<p>Ones: <%= @change[:ones] %></p>
		<p>Fives: <%= @change[:fives] %></p>
		<p>Tens: <%= @change[:tens] %></p>
		<p>Twenties: <%= @change[:twenties] %></p>
		<p>Fifties: <%= @change[:fifties] %></p>
		<p>Hundreds: <%= @change[:hundreds] %></p>
		<p>Five Hundreds: <%= @change[:five_hundreds] %></p>
		<p>Thousands: <%= @change[:thousands] %></p>
		<br/>
		<br/>
        <a href="/" class="btn btn-default">Return to Home Page</a>

	</div>
    </div><!-- /.container -->


